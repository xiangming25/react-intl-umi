{
  "name": "react-intl-umi",
	"displayName": "react-intl-umi",
	"publisher": "xiangming",
	"description": "a vscode plugin for react-intl and umi-locale",
	"version": "0.0.1",
	"repository": "https://github.com/xiangming25/react-intl-umi",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:react-intl-umi.helloWorld",
				"onLanguage:javascriptreact",
				"onLanguage:javascript",
				"onLanguage:typescript",
				"onLanguage:typescriptreact"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "react-intl-umi.helloWorld",
				"title": "Hello World"
			}
		],
		"configuration": {
			"title": "react-intl-umi配置",
			"properties": {
				"react-intl-umi.configPath": {
					"type": "string",
					"default": "src/locales",
					"description": "国际化配置文件地址"
				},
				"react-intl-umi.suffix": {
					"type": "string",
					"default": ".ts",
					"description": "国际化配置文件后缀"
				},
				"react-intl-umi.regExp": {
					"type": "string",
					"default": "intl.formatMessage({ id: '$1' })",
					"description": "匹配格式"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
